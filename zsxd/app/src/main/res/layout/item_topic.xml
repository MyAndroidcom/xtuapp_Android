<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/ll_post">
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/owner_feed"/>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/textsize_caption"
            android:text="壮志凌云"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textColor="@color/colorSecondaryText"
                android:text="2016-04-05"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </LinearLayout>
    <TextView
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:lineSpacingMultiplier="1.5"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_body"
        android:textColor="@color/colorSecondaryText"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="我爱湘大，我爱湘大，湘大爱我，湘大爱我，湘大最棒，湘大最棒，掌上湘大我最棒！！！"/>
    <com.xtuapp.zsxd.view.ScaleableImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:aspect_ratio="1.78"
        android:src="@drawable/home_top_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_item_topic_selector"
            android:src="@drawable/ic_favorite_green_50_24dp"
            android:layout_weight="1"/>
        <ImageButton
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_item_topic_selector"
            android:src="@drawable/ic_star_border_green_50_24dp"
            android:layout_weight="1"/>
        <ImageButton
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_share_black_24dp"
            android:background="@drawable/btn_item_topic_selector"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right">
        <ImageButton
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_item_topic_selector"
            android:src="@drawable/ic_comment_green_50_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="213"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
